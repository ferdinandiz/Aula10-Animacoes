<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/topo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aula 10"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="@color/white"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/topo"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Aula de Animações\nToque nas imagens para animá-las"/>
    <ImageView
        android:id="@+id/imgFlecha"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/arrow"/>
    <ImageView
        android:id="@+id/imgGengar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gengar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/imgCortinaEsq"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/curtain_left"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/imgCortinaDir"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/curtain_right"/>


</RelativeLayout>